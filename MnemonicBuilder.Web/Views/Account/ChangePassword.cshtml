@model MnemonicBuilder.Web.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Создание нового пароля";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<form asp-action="ChangePassword">
    <section class="min-vh-100">
        <div class="py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Создание нового пароля</h2>
                                <p class="text-dark-50 mb-5">Пожалуйста, придумайте новый пароль!</p>

                                <div class="form-outline mb-4 text-start">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control form-control-lg disabled text-muted" readonly/>
                                </div>


                                <div class="form-outline mb-4 text-start">
                                    <label asp-for="NewPassword" class="form-label">Password</label>
                                    <input asp-for="NewPassword" class="form-control form-control-lg" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4 text-start">
                                    <label asp-for="ConfirmNewPassword" class="form-label">Password</label>
                                    <input asp-for="ConfirmNewPassword" class="form-control form-control-lg" />
                                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                </div>

                                <button class="btn btn-outline-dark btn-lg px-5" type="submit">Готово</button>

                            </div>

                            <div>
                                <p class="mb-0">
                                    Нет аккаунта? <a asp-action="VerifyEmail" class="text-black-50 fw-bold">Зарегистрироваться</a>
                                </p>
                            </div>
                            <div>
                                <a asp-controller="Account" asp-action="VerifyEmail">Назад</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


