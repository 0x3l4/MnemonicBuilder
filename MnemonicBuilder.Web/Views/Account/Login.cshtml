@model MnemonicBuilder.Web.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Авторизация";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<form asp-action="Login">
    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
    <section class="min-vh-100">
        <div class="py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Вход</h2>
                                <p class="text-dark-50 mb-5">Пожалуйста, введите свой логин и пароль!</p>

                                <div class="form-outline mb-4 text-start">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control form-control-lg" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>


                                <div class="form-outline mb-4 text-start">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input asp-for="Password" class="form-control form-control-lg" />
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                </div>

                                <div class="form-outline form-check mb-4 text-start">
                                    <label class="form-check-label">
                                        <input asp-for="RememberMe" class="form-check-input"/>
                                        @Html.DisplayNameFor(a=>a.RememberMe)
                                    </label>
                                </div>

                                <p class="small mb-5 pb-lg-2"><a asp-action="VerifyEmail" class="text-black-50">Забыли пароль?</a></p>

                                <button class="btn btn-outline-dark btn-lg px-5" type="submit">Готово</button>

                            </div>

                            <div>
                                <p class="mb-0">
                                    Нет аккаунта? <a asp-action="Register" class="text-black-50 fw-bold">Зарегистрироваться</a>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


