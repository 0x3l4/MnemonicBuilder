@model MnemonicBuilder.Web.ViewModels.RegisterViewModel

@{
	ViewData["Title"] = "Регистрация";
	Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<form asp-action="Register">
	<div class="row justify-content-center align-items-center">
		<div class="col-12 col-md-8 col-lg-6 col-xl-5">
			<div class="card" style="border-radius: 1rem;">
				<div class="card-body p-5 text-center">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<div class="mb-md-5 mt-md-4 pb-5">

						<h2 class="fw-bold mb-2 text-uppercase">Регистрация</h2>
						<p class="text-dark-50 mb-5">Пожалуйста, введите данные!</p>

						<div class="form-outline mb-3 text-start">
							<label asp-for="Name" class="form-label">Имя</label>
							<input asp-for="Name" class="form-control form-control-lg" />
							<span asp-validation-for="Name" class="text-danger" style="min-height: 1.25rem; display: block;"></span>
						</div>

						<div class="form-outline mb-3 text-start">
							<label asp-for="Email" class="form-label">Почта</label>
							<input asp-for="Email" class="form-control form-control-lg" />
							<span asp-validation-for="Email" class="text-danger" style="min-height: 1.25rem; display: block;"></span>
						</div>

						<div class="form-outline mb-3 text-start">
							<label asp-for="Password" class="form-label">Пароль</label>
							<input asp-for="Password" class="form-control form-control-lg" />
							<span asp-validation-for="Password" class="text-danger" style="min-height: 1.25rem; display: block;"></span>
						</div>

						<div class="form-outline mb-3 text-start">
							<label asp-for="ConfirmPassword" class="form-label">Подтверждение пароля</label>
							<input asp-for="ConfirmPassword" class="form-control form-control-lg" />
							<span asp-validation-for="ConfirmPassword" class="text-danger" style="min-height: 1.25rem; display: block;"></span>
						</div>

						<button class="btn btn-outline-dark btn-lg px-5" type="submit">Готово</button>

					</div>

					<div>
						<p class="mb-0">
							Уже есть аккаунт? <a asp-action="Login" class="text-black-50 fw-bold">Войти</a>
						</p>
					</div>

				</div>
			</div>
		</div>
	</div>
</form>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}


