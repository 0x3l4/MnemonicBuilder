@model MnemonicBuilder.Web.ViewModels.VerifyEmailViewModel

@{
    ViewData["Title"] = "Подтверждение почты";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<form asp-action="VerifyEmail">
    <section class="min-vh-100">
        <div class="py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="card-body p-5 text-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-md-5 mt-md-4 pb-5">

                                <h2 class="fw-bold mb-2 text-uppercase">Подтверждение почты</h2>
                                <p class="text-dark-50 mb-5">Пожалуйста, введите свою почту!</p>

                                <div class="form-outline mb-4 text-start">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <input asp-for="Email" class="form-control form-control-lg" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <button class="btn btn-outline-dark btn-lg px-5" type="submit">Готово</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


