@model IEnumerable<MnemonicBuilder.Infrastructure.Entities.Set>

@{
    ViewData["Title"] = "Карточки";
}

<section>
    <div class="container">
        <h2>Мои наборы карточек</h2>
        <div class="row g-2 mt-3">
            @foreach (var set in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 my-2">
                    <div class="card h-100 shadow">
                        <div class="card-header text-truncate" title="@set.Title">
                            <span class="text-muted">@set.CreatedAt.AddHours(5).ToString("g")</span>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h6 class="card-title text-primary text-truncate">@set.Title</h6>
                            <p class="card-text small flex-grow-1 overflow-hidden" style="height: 5rem; text-overflow: ellipsis;">
                                @set.Description
                            </p>
                        </div>
                        <div class="card-footer btn-group">
                            <a asp-route-Id="@set.Id" asp-action="Edit" class="btn btn-outline-primary"><i class="bi bi-pencil"></i></a>
                            @* <a asp-route-Id="@sentence.Id" asp-action="Delete" class="btn btn-outline-danger"><i class="bi bi-trash3"></i></a> *@
                            <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@set.Id" data-title="@set.Title">
                                <i class="bi bi-trash3"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
